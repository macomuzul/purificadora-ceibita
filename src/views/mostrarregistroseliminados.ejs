<html>

<head>
  <title>Mostrar registros eliminados</title>
  <%- include("layouts/global") %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css">
  <link rel="stylesheet" href="/mostrarregistroseliminados.min.css">

  <script>
    let page = parseInt(`<%= pagina %>`);
    let totalPages = parseInt(`<%= totalPaginas %>`);
  </script>
  <script defer src="https://cdn.jsdelivr.net/npm/dayjs@1/dayjs.min.js"></script>
  <script defer src="https://cdnjs.cloudflare.com/ajax/libs/dayjs/1.11.7/locale/es.min.js"></script>
  <script defer src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
  <script defer src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script defer src="/spanFechas.js"></script>
  <script defer src="/tabs.js"></script>
  <script defer src="/mostrarregistroseliminados.js"></script>
  <script defer src="/paginacion.js"></script>
</head>

<body>
  <%- include("layouts/navbar") %>
  <button id="back-to-top-btn"><i class="fas fa-angle-double-up"></i></button>
  <main>
    <div class="contenedorsuperior">
      <a href="/respaldos/registroseliminados" class="flechaatras">
        <button class="btn btn-primary botonazul">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white"><path d="M20 0zm-8.344 14.709-1.41-1.418L12.547 11H4V9h8.673l-2.38-2.379 1.414-1.414 4.737 4.736z" /></svg>
          Volver al menú de respaldos
        </button>
      </a>
      <button class="button-85">Restaura o elimina definitivamente tablas borradas</button>
      <div></div>
      <div></div>
    </div>

    <div class="contenedoreliminarseleccionados">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="seleccionarTodos">
        <label class="form-check-label" for="seleccionarTodos">Seleccionar todos los registros en la página</label>
      </div>
      <div class="contenedorbotones contenedoreliminar eliminartodos">
        <div class="contenedoreliminarinterior">
          <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="white" class="bi bi-trash" viewBox="0 0 16 16"><path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" /><path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" /></svg>
          <span class="textoeliminar">
            <div>Eliminar todos los</div>
            <div>registros seleccionados</div>
          </span>
        </div>
      </div>
    </div>
    <% datostablas.forEach((registro,i)=> { %>
    <hr>
    <article name="<%=registro._id%>">
      <contenedor-acciones data-id="check<%=i%>"></contenedor-acciones>
      <% let fechaDelRegistro = DateTime.fromJSDate(registro.ventaspordia.fecha) %>
      <% let fechaEliminado = DateTime.fromJSDate(registro.fechaeliminacion, { zone: "America/Guatemala" }) %>
      <h2 class="fechaMover">Fecha del registro: <span-fechas class="fecharegistro"><span slot="fecha"><%= fechaDelRegistro.toFormat("d/M/y") %></span><span slot="fechaStr"><%= fechaDelRegistro.toLocaleString(DateTime.DATE_HUGE).replace(/^\w/, c => c.toUpperCase())  %></span></span-fechas></span></h2>
      <span>Se eliminó el <span-fechas><span slot="fecha"><%= fechaEliminado.toFormat("d/M/y") %></span><span slot="fechaStr"><%= fechaEliminado.toLocaleString(DateTime.DATE_HUGE) %></span></span-fechas><%= fechaEliminado.toFormat("'a las' H:mm 'con' ss 'segundos'") %></span>
      <custom-tabs>
        <div class="tabs">
        <% registro.ventaspordia.camiones.forEach((el, j) => {%>
          <custom-label name="<%=i%>tab" data-id="<%=i%>tab<%=j%>">Camión <%= (j+1) %></custom-label>
          <% }); %>
        </div>
        <div class="content">
          <% registro.ventaspordia.camiones.forEach((el, j) => {%>
            <tab-content name="<%=i%>tab">
              <%- include("layouts/tablas", {j, ventaspordia: registro.ventaspordia}) %>
            </tab-content>
            <% }); %>
          </div>
        </custom-tabs>
        <boton-restaurar></boton-restaurar>

    </article>

    <% }); %>
    <hr>
    <div class="contenedorpaginacion">
      <div class="pagination">
        <ul></ul>
      </div>
    </div>
  </main>

</body>

</html>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.3/toastr.min.css">
<style>
  #toast-container>div:hover {
    -webkit-box-shadow: 0 0 12px #999;
    box-shadow: 0 0 12px #999;
    opacity: 0.9;
  }

  #toast-container>.toast::before {
    position: absolute;
    font-family: FontAwesome;
    font-size: 24px;
    top: calc(50% - 12px);
    float: left;
    color: #FFF;
    padding-right: 0.5em;
    margin: auto 0.5em auto -1.5em;
    animation: fa-bounce 1s cubic-bezier(.28, .84, .42, 1) 500ms normal 1;
  }

  #toast-container>.toast-error, #toast-container>.toast-info {background-image: none !important;}
  #toast-container>.toast-error::before {content: "\f06a";}
  #toast-container>.toast-info::before {content: "\f0e0";}
</style>
<script src="/jquery-3.7.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.3/toastr.min.js"></script>
<script defer>
  toastr.options = {
    closeButton: true,
    progressBar: true,
    positionClass: "toast-bottom-full-width",
    preventDuplicates: true,
    timeOut: "100000",
    extendedTimeOut: "100000",
  }
</script>
<%- include('toastr') %>
<script defer>
  "<% if (correoEnviado) { %>"
  toastr["info"]("Se ha enviado la información de tu usuario a tu correo, por favor revisa tu bandeja de entrada para ver tus datos", "Se encontró un usuario vinculado a ese correo")
  "<% } else { %>"
  "<% if (intentosRestantes === '1') { %>"
  toastr["warning"]("Solo te queda un intento inválido más, si escribes mal este intento tendrás que esperar 6 horas para volver a intentarlo de nuevo", "Atención")
  "<% } %>"

  "<% if (intentosRestantes === '0') { %>"
  let tiempoQueQueda = parseInt("<%= tiempoQueQueda %>")
  let horas = Math.floor(tiempoQueQueda / 3600)
  tiempoQueQueda %= 3600;
  let minutos = Math.floor(tiempoQueQueda / 60)
  let segundos = tiempoQueQueda % 60
  toastr["error"](`Has superado la cantidad máxima de intentos incorrectos, el tiempo que te queda para volver a intentarlo son: ${horas ? `${horas} horas ` : ""}${minutos} minutos y ${segundos} segundos`, "Alerta")
  "<% } %>"
  "<% } %>"
</script>
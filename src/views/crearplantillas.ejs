<!DOCTYPE html>

<head>
  <title>Crear Plantillas</title>
  <%- include("layouts/global") %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link rel="stylesheet" href="/comunCrearYEditarPlantillas.min.css">
  <link rel="stylesheet" href="/crearplantillas.min.css" />

  <script defer src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  <script defer src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script defer src="/tablasortable.js"></script>
  <script defer src="/tecladoTabla.js"></script>
  <script defer src="/crearplantillas.js"></script>
  <script defer src="/comunCrearYEditarPlantillas.js"></script>
  <script defer src="/validarPlantillas.js"></script>
  <script defer src="/dropdown.js"></script>
</head>

<body>
  <%- include("layouts/navbar") %>
    <main>
      <section>
      <div class="filasuperior">
        <div class="volver">
          <a href="/plantillas">
          <button type="button" type="button" class="btn btn-primary botonazul botoncrear">
            <span class="flecha rotado"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white"><path d="M20 0zm-8.344 14.709-1.41-1.418L12.547 11H4V9h8.673l-2.38-2.379 1.414-1.414 4.737 4.736z" /></svg></span>
            Volver al menú principal
          </button>
        </a>
        </div>
          <div class="button2">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <input class="botontitulo" type="button" value="Desde aquí puedes crear tus plantillas" />
          </div>
        <div></div>
        <div></div>
      </div>
      <div class="contenedorsuperior">
        <label for="selector" class="label">Crear plantilla en base a otra plantilla</label>
        <custom-dropdown data-idmenu="" data-idseleccionado="seleccionado" data-textopordefecto="Selecciona una plantilla aquí (opcional)">
          <% plantillas.forEach(plantilla => { %>
            <li><%= plantilla.nombre %></li>
          <% }); %>
        </custom-dropdown>
      </div>
      <br>
      <div class="contenedormedio">
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" id="switchOrdenarFilas"/>
          <label class="form-check-label" for="switchOrdenarFilas">Reordenar filas</label>
        </div>
        <div class="nombreplantilla">
          <label for="nombreplantilla">Nombre de la plantilla:</label>
          <input type="text" id="nombreplantilla"/>
        </div>
        <div class="contenedorayuda">
          <div class="form-check form-switch switchmodoseguro">
            <input class="form-check-input" type="checkbox" id="switchModoSeguro" checked/>
            <label id="modosegurolabel" class="form-check-label" for="switchModoSeguro">Modo seguro</label>
          </div>
          <label class="form-check-label piedepagina">(preguntar antes de borrar)</label>
        </div>
      </div>
      <table>
        <thead>
          <tr>
            <th class="productos">Productos</th>
            <th class="precio">Precio</th>
            <th class="precio">Eliminar</th>
          </tr>
        </thead>
        <tbody id="cuerpotabla">
          <tr>
            <td contenteditable="true"></td>
            <td contenteditable="true"></td>
            <td><button type="button" class="botoneliminar"><svg class="svgeliminar" xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="red" class="bi bi-trash" viewBox="0 0 16 16"><path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" /><path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" /></svg></button></td>
          </tr>
        </tbody>
      </table>

      <div class="contenedorinferior">
        <input class="btn btn-primary botonazul" type="button" value="Añadir producto" id="añadirproducto" />
        <input class="btn btn-primary botonazul" type="button" value="Crear plantilla" id="guardar" />
      </div>
    </section>
    </main>
</body>
</html>
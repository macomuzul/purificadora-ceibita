<!DOCTYPE html>
<html>
<head>
  <title>Editar Usuarios</title>
  <%- include("layouts/global") %>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="stylesheet" href="/crearusuarios.min.css" />
  <link rel="stylesheet" href="/editarusuarios.min.css" />
  <script defer src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <script defer src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.3/toastr.min.js"></script>
  <script defer src="/modal.js"></script>
  <script defer src="/dropdownroles.js"></script>
  <script defer src="/prevenirCaracteresInputs.js"></script>
  <script defer src="/editarusuarios.js"></script>
</head>

<body>
  <%- include("layouts/navbar.ejs") %>
    <main>
      <div class="filasuperior">
        <div class="volver">
          <a href="/empleados/usuarios">
            <button type="button" type="button" class="btn btn-primary botonazul botoncrear">
              <span class="flecha rotado">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white">
                  <path d="M20 0zm-8.344 14.709-1.41-1.418L12.547 11H4V9h8.673l-2.38-2.379 1.414-1.414 4.737 4.736z" />
                </svg>
              </span>
              Volver al menú de usuarios
            </button>
          </a>
        </div>
        <div class="button2">
          <span></span><span></span><span></span><span></span>
          <input class="botontitulo" type="button" value="Desde aquí puedes editar los usuarios" />
        </div>
        <div></div><div></div>
      </div>
      <br>
        <div class="usuarioSeleccionado">Usuario Seleccionado: <%=usuario%></div>
      <form>
        <hr>
        <div class="formulario">
          <div class="fila">
            <div class="divinput">
              <label for="usuario">Nombre</label>
              <input class="form-control" type="text" id="usuario" autocomplete="off" value="<%=usuario%>">
            </div>
            <input class="btn btn-primary botonazul botonenviar" type="button" value="Cambiar nombre" id="cambiarUsuario">
          </div>
          <hr>
          <div class="fila">
            <div class="formcontraseña">
              <div class="divinput"><input-password data-label="Contraseña" data-id="contraseña"></input-password></div>
              <div class="divinput"><input-password data-label="Confirmar contraseña" data-id="confirmarContraseña"></input-password></div>
            </div>
            <input class="btn btn-primary botonazul botonenviar" type="button" value="Cambiar contraseña" id="cambiarContraseña">
          </div>
          <hr>
          <div class="fila">
            <div class="divrol"><dropdown-roles data-seleccionado="<%=rol%>"></dropdown-roles></div>
            <input class="btn btn-primary botonazul botonenviar" type="button" value="Cambiar rol" id="cambiarRol">
          </div>
          <hr>
          <div class="fila">
            <div class="divinput">
              <label for="correo">Correo</label>
              <input class="form-control" type="email" id="correo" autocomplete="off" required value="<%=correo%>">
            </div>
            <input class="btn btn-primary botonazul botonenviar" type="button" value="Cambiar correo" id="cambiarCorreo">
          </div>
          <hr>
        </div>
      </form>
    </main>
    <custom-modal></custom-modal>

</body>
</html>
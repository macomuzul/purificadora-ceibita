<html>

<head>
  <title>Document</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/crearusuarios.min.css" />
    <link rel="stylesheet" href="/editarusuarios.min.css" />
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script defer src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script defer src="/modal.js"></script>
    <script defer src="/prevenirCaracteresInputs.js"></script>
    <script defer src="/editarusuarios.js"></script>
</head>

<body>
  <%- include("layouts/navbar.ejs") %>
    <main>
      <div class="filasuperior">
        <div class="volver">
          <a href="/empleados/usuarios">
            <button type="button" type="button" class="btn btn-primary botonazul botoncrear">
              <span class="flecha rotado">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white">
                  <path d="M20 0zm-8.344 14.709-1.41-1.418L12.547 11H4V9h8.673l-2.38-2.379 1.414-1.414 4.737 4.736z" />
                </svg>
              </span>
              Volver al menú de usuarios
            </button>
          </a>
        </div>
        <div class="button2">
          <span></span>
          <span></span>
          <span></span>
          <span></span>
          <input class="botontitulo" type="button" value="Desde aquí puedes editar los usuarios" />
        </div>
        <div></div>
        <div></div>
      </div>
      <br>
        <div class="usuarioSeleccionado">Usuario Seleccionado: <span id="nombreUsuario"><%=nombreUsuario%></span></div>
      <form>
        <hr>
        <div class="formulario">
          <div class="fila">
            <div class="divusuario">
              <label for="usuario">Usuario</label>
              <input class="form-control" type="text" id="usuario">
            </div>
            <input class="btn btn-primary botonazul botonenviar" type="button" value="Cambiar usuario" id="cambiarUsuario" />
          </div>
          <hr>
          <div class="fila">
            <div class="formcontraseña">
              <div class="divcontraseña">
                <label for="contraseña">Contraseña</label>
                <input class="form-control" type="password" id="contraseña">
                <i class="fa-solid fa-eye escondido"></i>
                <i class="fa-sharp fa-solid fa-eye-slash"></i>
              </div>
              <div class="divcontraseña">
                <label for="confirmarContraseña">Confirmar contraseña</label>
                <input class="form-control" type="password" id="confirmarContraseña">
                <i class="fa-solid fa-eye escondido"></i>
                <i class="fa-sharp fa-solid fa-eye-slash"></i>
              </div>
            </div>
            <input class="btn btn-primary botonazul botonenviar" type="button" value="Cambiar contraseña" id="cambiarContraseña" />
          </div>
          <hr>
          <div class="fila">
            <div class="divrol">
              <%- include("./componentes/dropdownRoles.ejs") %>
            </div>
            <input class="btn btn-primary botonazul botonenviar" type="button" value="Cambiar rol" id="cambiarRol" />
          </div>
          <hr>
        </div>

      </form>
    </main>
    <%- include("./componentes/modal.ejs") %>

</body>

</html>
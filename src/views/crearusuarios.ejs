<!DOCTYPE html>
<html>
<head>
  <title>Crear usuarios</title>
  <%- include("layouts/global") %>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="stylesheet" href="/crearusuarios.min.css">
  <script defer src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <%- include('layouts/toastrfont') %>
  <script defer src="/modalAutenticacion.js"></script>
  <script defer src="/dropdownroles.js"></script>
  <script defer src="/prevenirCaracteresInputs.js"></script>
  <script defer src="/crearusuarios.js"></script>
</head>

<body>
  <%- include("layouts/navbar.ejs") %>
    <main>
      <div class="filasuperior">
        <div class="volver">
          <a href="/empleados/usuarios">
            <button type="button" type="button" class="btn btn-primary botonazul botoncrear">
              <span class="flecha rotado"><svg width="20" height="20" fill="white"><path d="M20 0zm-8.344 14.709-1.41-1.418L12.547 11H4V9h8.673l-2.38-2.379 1.414-1.414 4.737 4.736z" /></svg></span>
              Volver al menú de usuarios
            </button>
          </a>
        </div>
        <div class="button2">
          <span></span><span></span><span></span><span></span>
          <input class="botontitulo" type="button" value="Desde aquí puedes crear nuevos usuarios" />
        </div>
        <div></div><div></div>
      </div>
      <br>

      <form>
        <i class="fa-sharp fa-solid fa-eye-slash"></i>
        <div class="formulario">
          <div><label for="usuario">Nombre de usuario</label><input class="form-control" type="text" id="usuario"></div>
          <div class="divinput"><input-password data-label="Contraseña" data-id="contraseña"></input-password></div>
          <div class="divinput"><input-password data-label="Confirmar contraseña" data-id="confirmarContraseña"></input-password></div>
          <div><dropdown-roles></dropdown-roles></div>
          <div><label for="correo">Correo (Opcional)</label><input class="form-control" type="email" id="correo" autocomplete="off" required></div>
        </div>

        <div class="contenedorinferior"><input class="btn btn-primary botonazul" type="button" value="Crear usuario" id="guardar" /></div>
      </form>
    </main>
    <custom-modal></custom-modal>
</body>
</html>
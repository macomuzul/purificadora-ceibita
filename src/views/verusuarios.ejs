<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=1200px">
  <title>Ver Usuarios</title>
  <%- include("layouts/global") %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
  <link rel="stylesheet" href="/verusuarios.min.css" />

  <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <script defer src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
  <script defer src="/sweetalert-2.11.js"></script>
  <script defer src="/counter.js"></script>
  <script defer src="/modal.js"></script>
  <script defer src="/verusuarios.js"></script>
</head>

<body>
  <%- include("layouts/navbar") %>

  <main>
    <div class="filasuperior">
    <div></div>
    <div class="button2">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <input class="botontitulo" type="button" value="Desde aquí puedes administrar los usuarios" />
    </div>
    <div>
        <a href="/empleados/usuarios/crear">
        <button id="botoncrear" type="button" type="button" class="btn btn-primary botonazul botoncrear">Crear nuevo usuario <span class="flecha">
            <svg xmlns="http://www.w3.org/2000/svg" fill="white" width="20" height="20"><path d="M20 0zm-8.344 14.709-1.41-1.418L12.547 11H4V9h8.673l-2.38-2.379 1.414-1.414 4.737 4.736z" /></svg>
        </span></button>
        </a>
    </div>
    </div>
    <table>
    <thead>
        <tr>
        <th class="usuario">Usuario</th>
        <th class="contraseña">Contraseña</th>
        <th>Ver contraseña</th>
        <th class="rol">Rol</thc>
        <th class="correo">Correo</thc>
        <th>Editar</th>
        <th>Eliminar</th>
        </tr>
    </thead>
    <tbody id="cuerpotabla">
        <% usuarios.forEach(({usuario, rol, correo}) => { %>
        <tr>
          <td><%=usuario%></td>
          <td>********</td>
          <td>
            <div class="contenedorflex">
              <custom-counter></custom-counter>
              <i class="fa-sharp fa-solid fa-eye" style="display: none;"></i>
              <i class="fa-sharp fa-solid fa-eye-slash"></i>
            </div>
          </td>
        <td><%=rol%></td>
        <td><% if(correo){ %> <%=correo%><% } else { %>-<% } %></td>
        <td><svg class="svgeditar" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M20.548 3.452a1.542 1.542 0 0 1 0 2.182l-7.636 7.636-3.273 1.091 1.091-3.273 7.636-7.636a1.542 1.542 0 0 1 2.182 0zM4 21h15a1 1 0 0 0 1-1v-8a1 1 0 0 0-2 0v7H5V6h7a1 1 0 0 0 0-2H4a1 1 0 0 0-1 1v15a1 1 0 0 0 1 1z"/></svg></td>
        <td><svg class="svgeliminar" xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="red" class="bi bi-trash" viewBox="0 0 16 16"> <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" /> <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" /></svg></td>
        </tr> 
      <% }); %>
    </tbody>
    </table>

  </main>
  <custom-modal></custom-modal>
</body>
</html>